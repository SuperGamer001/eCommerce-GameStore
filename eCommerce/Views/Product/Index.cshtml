@model IEnumerable<eCommerce.Models.Product>
@{
	ViewData["Title"] = "Product Listings";
}

<h2>Product Listing</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Product</a>	

@if (Model.Count() == 0)
{
	<p>No products found.</p>
}
else {
	<table class="table table-striped">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(m => m.First().Title)</th>
				<th>@Html.DisplayNameFor(m => m.First().Price)</th>
				<th>Links</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(p => item.Title)</td>
					<td>@Html.DisplayFor(p => item.Price)</td>
					<td>Edit -- Remove</td>
				</tr>
			}
		</tbody>
	</table>
}